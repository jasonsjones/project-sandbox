{
    "name": "side-project",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna run clean --stream && lerna clean --yes && rm -rf node_modules",
        "dev": "yarn workspace @orion/shared build && lerna run dev --stream --no-prefix",
        "postinstall": "yarn bootstrap",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "test": "lerna run test --stream",
        "test:api-v2:unit": "lerna run test --stream --scope @orion/api-v2",
        "test:api-v2:e2e": "lerna run test:e2e --stream --scope @orion/api-v2",
        "test:app": "lerna run test --stream --scope @orion/app",
        "test:shared": "lerna run test --stream --scope @orion/shared"
    },
    "dependencies": {
        "lerna": "3.22.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "4.2.0",
        "@typescript-eslint/parser": "4.2.0",
        "babel-eslint": "10.1.0",
        "eslint": "7.11.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-import": "2.20.1",
        "husky": "4.2.5",
        "lint-staged": "10.3.0",
        "prettier": "2.1.1",
        "ts-jest": "26.3.0",
        "typescript": "4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "license": "MIT"
}
