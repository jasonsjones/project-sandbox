{
    "name": "@orion/app",
    "version": "1.0.0",
    "scripts": {
        "build": "vite build && yarn generate:redirects",
        "clean": "rm -rf dist",
        "clean:full": "yarn clean && rm -rf node_modules",
        "dev": "vite --open",
        "generate:redirects": "echo \"/*    /index.html    200\" > dist/_redirects",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "lint:ci": "eslint src/**/*.tsx",
        "start": "PORT=4200 serve -s build",
        "test": "jest --colors --runInBand"
    },
    "dependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-query": "3.34.18",
        "react-router-dom": "6.2.2",
        "serve": "13.0.2"
    },
    "devDependencies": {
        "@orion/shared": "1.0.0",
        "@testing-library/jest-dom": "5.16.3",
        "@testing-library/react": "12.1.4",
        "@testing-library/user-event": "13.5.0",
        "@types/react": "17.0.43",
        "@types/react-dom": "17.0.14",
        "@types/react-query": "1.2.9",
        "@types/react-router-dom": "5.3.3",
        "@vitejs/plugin-react": "1.2.0",
        "autoprefixer": "10.4.4",
        "postcss": "8.4.12",
        "postcss-cli": "9.1.0",
        "tailwindcss": "3.0.23",
        "vite": "2.8.6",
        "vite-plugin-environment": "1.1.1"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.+(ts|tsx|js)",
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest",
            "^.+\\.svg$": "<rootDir>/test/__mocks__/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$"
        ],
        "moduleDirectories": [
            "node_modules",
            "<rootDir>/src"
        ],
        "resetMocks": true,
        "testEnvironment": "jsdom",
        "verbose": true
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "license": "MIT"
}
