{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["@types", "./node_modules/@types", "../../node_modules/@types"]
    }
}
