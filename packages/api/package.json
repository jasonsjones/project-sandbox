{
    "name": "@orion/api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "clean": "rimraf dist",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "NODE_ENV=development nest start --preserveWatchOutput --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest --color --runInBand",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json --color --runInBand",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
    },
    "dependencies": {
        "@nestjs/common": "8.4.2",
        "@nestjs/config": "2.0.0",
        "@nestjs/core": "8.4.2",
        "@nestjs/graphql": "9.1.2",
        "@nestjs/jwt": "8.0.0",
        "@nestjs/passport": "8.2.1",
        "@nestjs/platform-express": "8.4.2",
        "@nestjs/typeorm": "8.0.3",
        "apollo-server-express": "3.6.5",
        "bcryptjs": "2.4.3",
        "cli-color": "2.0.1",
        "cookie-parser": "1.4.6",
        "graphql": "15.8.0",
        "graphql-tools": "8.1.0",
        "graphql-upload": "12.0.0",
        "jsforce": "1.11.0",
        "passport": "0.5.2",
        "passport-jwt": "4.0.0",
        "passport-local": "1.0.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.5.3",
        "sf-jwt-token": "1.3.0",
        "sqlite3": "5.0.2",
        "typeorm": "0.2.45"
    },
    "devDependencies": {
        "@nestjs/cli": "8.2.4",
        "@nestjs/schematics": "8.0.8",
        "@nestjs/testing": "8.4.2",
        "@types/bcryptjs": "2.4.2",
        "@types/cli-color": "2.0.2",
        "@types/cookie-parser": "1.4.2",
        "@types/express": "4.17.13",
        "@types/graphql-upload": "8.0.11",
        "@types/jsforce": "1.9.41",
        "@types/passport-jwt": "3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "2.0.12",
        "@types/uuid": "8.3.4",
        "supertest": "6.2.2",
        "ts-loader": "9.2.8",
        "ts-node": "10.7.0",
        "tsconfig-paths": "3.14.1"
    },
    "engines": {
        "node": "14.19.X"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "verbose": true
    }
}
